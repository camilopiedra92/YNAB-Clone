{
  "name": "ynab-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "./scripts/with-local-tmp.sh bash -c 'npm run db:migrate && next dev'",
    "build": "./scripts/with-local-tmp.sh next build",
    "start": "./scripts/with-local-tmp.sh bash -c 'npm run db:migrate && next start'",
    "lint": "./scripts/with-local-tmp.sh eslint",
    "typecheck": "./scripts/with-local-tmp.sh npx tsc --noEmit",
    "test": "./scripts/with-local-tmp.sh node --env-file=.env node_modules/vitest/vitest.mjs run",
    "test:coverage": "./scripts/with-local-tmp.sh node --env-file=.env node_modules/vitest/vitest.mjs run --coverage",
    "test:watch": "./scripts/with-local-tmp.sh node --env-file=.env node_modules/vitest/vitest.mjs",
    "test:e2e": "./scripts/with-local-tmp.sh node --env-file=.env node_modules/@playwright/test/cli.js test",
    "db:generate": "./scripts/with-local-tmp.sh drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "./scripts/with-local-tmp.sh node --env-file=.env --import tsx/esm scripts/migrate-db.ts",
    "db:migrate:prod": "node scripts/dist/migrate-db.js",
    "build:scripts": "esbuild scripts/migrate-db.ts scripts/verify-deployment.ts --bundle --platform=node --format=esm --target=node22 --outdir=scripts/dist",
    "db:import": "./scripts/with-local-tmp.sh node --env-file=.env --import tsx/esm scripts/import-ynab-data.ts",
    "db:studio": "./scripts/with-local-tmp.sh drizzle-kit studio --config=drizzle.config.ts",
    "db:verify": "./scripts/with-local-tmp.sh node --env-file=.env --import tsx/esm scripts/verify-db.ts",
    "db:migrate-cc": "./scripts/with-local-tmp.sh node --env-file=.env --import tsx/esm scripts/migrate-cc-categories.ts",
    "db:migrate-tenants": "./scripts/with-local-tmp.sh node --env-file=.env --import tsx/esm scripts/migrate-to-multitenancy.ts",
    "db:debug-import": "./scripts/with-local-tmp.sh node --env-file=.env --import tsx/esm scripts/debug-import.ts",
    "db:debug-rta": "./scripts/with-local-tmp.sh node --env-file=.env --import tsx/esm scripts/debug-rta.ts",
    "health:check": "./scripts/with-local-tmp.sh node --env-file=.env --import tsx/esm scripts/health-check.ts",
    "check:deploy": "./scripts/with-local-tmp.sh node --env-file=.env --import tsx/esm scripts/verify-deployment.ts",
    "db:audit": "./scripts/with-local-tmp.sh node --env-file=.env --import tsx/esm scripts/db-audit.ts",
    "git:sync": "bash scripts/sync.sh",
    "git:prune": "bash scripts/prune-branches.sh",
    "git:install-hooks": "bash scripts/install-hooks.sh",
    "check:future-filter": "bash scripts/check-future-date-filter.sh",
    "prepare": "bash scripts/install-hooks.sh"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "@auth/drizzle-adapter": "^1.11.1",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@electric-sql/pglite": "^0.3.15",
    "@sentry/nextjs": "^10.38.0",
    "@tanstack/query-async-storage-persister": "^5.90.22",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@tanstack/react-query-persist-client": "^5.90.22",
    "@tanstack/react-virtual": "^3.13.18",
    "bcryptjs": "^3.0.3",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "idb-keyval": "^6.2.2",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-auth": "^5.0.0-beta.30",
    "postgres": "^3.4.8",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sonner": "^2.0.7",
    "swagger-ui-dist": "^5.31.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/swagger-ui-dist": "^3.30.6",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.25.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "overrides": {}
}
