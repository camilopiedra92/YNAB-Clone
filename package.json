{
  "name": "ynab-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run db:migrate && next dev",
    "build": "next build",
    "start": "npm run db:migrate && next start",
    "lint": "eslint",
    "test": "mkdir -p .tmp && TMPDIR=.tmp node --env-file=.env node_modules/vitest/vitest.mjs run",
    "test:coverage": "mkdir -p .tmp && TMPDIR=.tmp node --env-file=.env node_modules/vitest/vitest.mjs run --coverage",
    "test:watch": "mkdir -p .tmp && TMPDIR=.tmp node --env-file=.env node_modules/vitest/vitest.mjs",
    "test:e2e": "mkdir -p .tmp && TMPDIR=.tmp node --env-file=.env node_modules/@playwright/test/cli.js test",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:import": "mkdir -p .tmp && TMPDIR=.tmp node --env-file=.env --import tsx/esm scripts/import-ynab-data.ts",
    "db:migrate": "mkdir -p .tmp && TMPDIR=.tmp node --env-file=.env --import tsx/esm scripts/migrate-db.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.config.ts",
    "health:check": "mkdir -p .tmp && TMPDIR=.tmp node --env-file=.env --import tsx/esm scripts/health-check.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@electric-sql/pglite": "^0.3.15",
    "@tanstack/query-async-storage-persister": "^5.90.22",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@tanstack/react-query-persist-client": "^5.90.22",
    "@tanstack/react-virtual": "^3.13.18",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "idb-keyval": "^6.2.2",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "postgres": "^3.4.8",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sonner": "^2.0.7",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
